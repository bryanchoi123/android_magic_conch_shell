<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Theme for Edit Response activity -->
    <style name="EditResponsesTheme" parent="AppTheme">
        <item name="android:textViewStyle">@style/ResponsesTextViewStyle</item>
    </style>

    <style name="ResponsesTextViewStyle">
        <item name="android:paddingTop">@dimen/response_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/response_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/response_horizontal_margin</item>

        <item name="android:textSize">@dimen/response_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Theme for Add Response Activity -->
    <style name="AddResponseTheme" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowTitleStyle">@style/AddResponseTheme.ActionBarStyle</item>
        <item name="android:textViewStyle">@style/AddResponseTheme.TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextViewStyle</item>
    </style>

    <style name="AddResponseTheme.ActionBarStyle">
        <item name="android:background">@color/background_floating_material_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/add_response_title_size</item>
        <item name="android:paddingBottom">@dimen/add_response_label_vertical_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AddResponseTheme.TextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/add_response_label_text_size</item>
    </style>

    <style name="EditTextViewStyle" parent="android:style/Widget.EditText">
        <item name="android:textSize">@dimen/add_response_response_text_size</item>
    </style>

</resources>
